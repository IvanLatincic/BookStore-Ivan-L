@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Korisnički profil";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-striped table-hover">
            @foreach (var item in Model)
            {
                @if (ViewBag.UserId == item.Id)
                {
                    <tr>
                        <th>@Html.DisplayNameFor(x=>x.Email)</th>
                        <td>@Html.DisplayFor(x=>item.Email)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(x=>x.UserName)</th>
                        <td>@Html.DisplayFor(x=>item.UserName)</td>
                    </tr>
                    <tr>
                        <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="EditUsername" asp-route-id="@item.Id"> Promijenite korisničko ime</a>
                    </tr>
                }
               
            }
        </table>
    </div>
</div>

